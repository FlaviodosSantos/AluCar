<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.AluCar">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <!-- Tela Splash -->
        <activity android:name=".activity.SplashActivity" android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activity.MainActivity" />
        <activity
            android:name=".activity.Locacoes"
            android:parentActivityName=".activity.MainActivity" />
        <activity
            android:name=".activity.ListarClientes"
            android:parentActivityName=".activity.MainActivity" />
        <activity
            android:name=".activity.ListarDisponiveis"
            android:parentActivityName=".activity.MainActivity" />

        <activity
            android:name=".activity.Cadastrar_cliente"
            android:parentActivityName=".activity.ListarClientes" />  <!-- botão voltar automático com finish -->

        <activity
            android:name=".activity.Cadastrar_veiculo"
            android:parentActivityName=".activity.ListarDisponiveis" /> <!-- botão voltar automático com finish -->

    </application>

</manifest>